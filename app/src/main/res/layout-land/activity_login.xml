<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/top_view"/>

    <ImageView
        android:layout_width="@dimen/space_v_330"
        android:layout_height="@dimen/space_v_330"
        android:src="@mipmap/loginlogo"
        android:layout_marginTop="@dimen/space_v_50"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_90"
        android:layout_marginTop="@dimen/space_v_70"
        android:layout_marginLeft="@dimen/space_v_20"
        android:layout_marginRight="@dimen/space_v_20"
        android:background="@drawable/login_edit_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/space_v_34"
            android:layout_height="@dimen/space_v_34"
            android:src="@mipmap/username_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_v_20"
            />
        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space_v_12"
            android:hint="请输入手机号码/邮箱"
            android:textSize="@dimen/textsize_28"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_1"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_90"
        android:layout_marginTop="@dimen/space_v_40"
        android:layout_marginLeft="@dimen/space_v_20"
        android:layout_marginRight="@dimen/space_v_20"
        android:background="@drawable/login_edit_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/space_v_34"
            android:layout_height="@dimen/space_v_34"
            android:src="@mipmap/password_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_v_20"
            />
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space_v_12"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="@dimen/textsize_28"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_1"
            android:background="@null"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_90"
        android:layout_marginTop="@dimen/space_v_60"
        android:layout_marginLeft="@dimen/space_v_20"
        android:layout_marginRight="@dimen/space_v_20"
        android:background="@drawable/login_confirm_bg"
        android:text="登录"
        android:textSize="@dimen/textsize_32"
        android:textColor="@color/white"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_v_40">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他方式登录"
            android:textSize="@dimen/textsize_24"
            android:textColor="@color/text_hint"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_1"
            android:background="@color/part_divider"
            android:layout_marginLeft="@dimen/space_v_20"
            android:layout_toLeftOf="@id/textView1"
            android:layout_marginRight="@dimen/space_v_20"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_1"
            android:background="@color/part_divider"
            android:layout_marginLeft="@dimen/space_v_20"
            android:layout_toRightOf="@id/textView1"
            android:layout_marginRight="@dimen/space_v_20"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_v_50">
        
        <ImageView
            android:id="@+id/image_qq"
            android:layout_width="@dimen/space_v_60"
            android:layout_height="@dimen/space_v_60"
            android:src="@mipmap/login_qq"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/image_weixin"
            android:layout_width="@dimen/space_v_60"
            android:layout_height="@dimen/space_v_60"
            android:src="@mipmap/login_weixin"
            android:layout_toLeftOf="@id/image_qq"
            android:layout_marginRight="@dimen/space_v_40"/>

        <ImageView
            android:id="@+id/image_weibo"
            android:layout_width="@dimen/space_v_60"
            android:layout_height="@dimen/space_v_60"
            android:src="@mipmap/login_weibo"
            android:layout_toRightOf="@id/image_qq"
            android:layout_marginLeft="@dimen/space_v_40"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_8"
        android:layout_marginTop="@dimen/space_v_40"
        android:background="@color/part_big_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_v_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_forget_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="忘记密码？"
            android:textSize="@dimen/textsize_28"
            android:textColor="@color/text_color_1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/text_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="注册"
            android:textSize="@dimen/textsize_28"
            android:textColor="@color/text_color_1"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>