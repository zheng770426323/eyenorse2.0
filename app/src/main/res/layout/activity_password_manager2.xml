<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/head_top"/>
    <include layout="@layout/top_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_120"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginRight="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_20"
        android:background="@drawable/login_edit_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/space_v_34"
            android:layout_height="@dimen/space_v_34"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_v_20"
            android:src="@mipmap/password_icon" />

        <EditText
            android:id="@+id/edit_old_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="原登录密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/space_v_12"
            android:maxLength="12"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/textsize_28" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_120"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginRight="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_20"
        android:background="@drawable/login_edit_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/space_v_34"
            android:layout_height="@dimen/space_v_34"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_v_20"
            android:src="@mipmap/password_icon" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="新的登录密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/space_v_12"
            android:maxLength="12"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/textsize_28" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_120"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginRight="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_30"
        android:background="@drawable/login_edit_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/space_v_34"
            android:layout_height="@dimen/space_v_34"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_v_20"
            android:src="@mipmap/password_icon" />

        <EditText
            android:id="@+id/edit_password_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="确认新的登录密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/space_v_12"
            android:maxLength="12"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/textsize_28" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_120"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginRight="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_50"
        android:background="@drawable/login_confirm_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_32" />

</LinearLayout>