<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/space_v_500"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/space_v_30"
            android:text="提示"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/textsize_28"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/image_mis"
            android:layout_width="@dimen/space_v_30"
            android:layout_height="@dimen/space_v_30"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_v_30"
            android:src="@mipmap/mistake"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_v_20"
        android:gravity="center"
        android:text=""
        android:textColor="@color/confirm_bg_color"
        android:textSize="@dimen/textsize_28" />
    <LinearLayout
        android:layout_width="@dimen/space_v_500"
        android:layout_height="@dimen/space_v_1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_v_40"
        android:background="@color/part_divider"></LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/space_v_500"
        android:layout_height="@dimen/space_v_70"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/confirm_bg_color"
            android:textSize="@dimen/textsize_28" />

        <LinearLayout
            android:layout_width="@dimen/space_v_1"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/part_divider"></LinearLayout>

        <TextView
            android:id="@+id/textView_affirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_color_oldred"
            android:textSize="@dimen/textsize_28" />
    </LinearLayout>

</LinearLayout>