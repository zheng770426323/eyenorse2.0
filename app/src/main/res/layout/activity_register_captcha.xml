<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_top"/>
    <include layout="@layout/top_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_50"
        android:text="请确认您的手机畅通，以便接收注册验证码短信"
        android:textColor="@color/text_color_orange"
        android:textSize="@dimen/textsize_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_120"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginRight="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_20"
        android:background="@drawable/login_edit_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/space_v_34"
            android:layout_height="@dimen/space_v_34"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_v_20"
            android:src="@mipmap/phone_icon" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入11位手机号码"
            android:inputType="phone"
            android:paddingLeft="@dimen/space_v_12"
            android:maxLength="11"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/textsize_28" />

        <TextView
            android:id="@+id/text_send_captcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/space_v_20"
            android:background="@drawable/captcha_enabled"
            android:paddingBottom="@dimen/space_v_4"
            android:paddingLeft="@dimen/space_v_10"
            android:paddingRight="@dimen/space_v_10"
            android:paddingTop="@dimen/space_v_4"
            android:text="获取验证码"
            android:textColor="@color/text_color_red"
            android:textSize="@dimen/textsize_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_120"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginRight="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_30"
        android:background="@drawable/login_edit_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/space_v_38"
            android:layout_height="@dimen/space_v_38"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_v_20"
            android:src="@mipmap/captcha_icon" />

        <EditText
            android:id="@+id/edit_captcha"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入6位短信验证码，15分钟内有效"
            android:inputType="phone"
            android:paddingLeft="@dimen/space_v_12"
            android:maxLength="6"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/textsize_28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_120"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginRight="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_30"
        android:background="@drawable/login_edit_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/space_v_34"
            android:layout_height="@dimen/space_v_34"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_v_20"
            android:src="@mipmap/password_icon" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入6-18位字符字母数字组合登录密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:paddingLeft="@dimen/space_v_12"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/textsize_28" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_120"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginRight="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_50"
        android:background="@drawable/login_no_password_bg"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_32" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_select"
                android:layout_width="@dimen/space_v_34"
                android:layout_height="@dimen/space_v_34"
                android:background="@mipmap/select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_v_8"
                android:text="同意"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/textsize_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_v_4"
                android:paddingRight="@dimen/space_v_4"
                android:text="《眼护士网络服务协议》"
                android:textColor="@color/text_color_blue"
                android:textSize="@dimen/textsize_20" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_v_1"
                android:background="@color/text_color_blue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>