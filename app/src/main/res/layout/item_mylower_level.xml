<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_90"
        android:paddingLeft="@dimen/space_v_30"
        android:paddingRight="@dimen/space_v_30"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_image_bg"
            android:layout_width="@dimen/space_v_60"
            android:layout_height="@dimen/space_v_60"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_v_20">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simpleDraweeView_head_icon"
                android:layout_width="@dimen/space_v_60"
                android:layout_height="@dimen/space_v_60"
                fresco:actualImageScaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:roundedCornerRadius="@dimen/space_v_30"
                fresco:roundingBorderColor="@color/dark_line"
                fresco:roundingBorderWidth="@dimen/space_v_1"
                fresco:placeholderImage="@mipmap/default_118_118"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长山路"
            android:textSize="@dimen/textsize_24"
            android:textColor="@color/text_color_1"
            android:layout_toRightOf="@id/rl_image_bg"
            android:layout_marginLeft="@dimen/space_v_10"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/image_arror"
            android:layout_width="@dimen/space_v_12"
            android:layout_height="@dimen/space_v_20"
            android:src="@mipmap/right_b_back"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>