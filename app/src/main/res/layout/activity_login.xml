<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_top" />

    <include layout="@layout/top_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iamge"
                    android:layout_width="@dimen/space_v_330"
                    android:layout_height="@dimen/space_v_330"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_v_40"
                    android:src="@mipmap/loginlogo" />

                <LinearLayout
                    android:id="@+id/ll_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_v_120"
                    android:layout_below="@id/iamge"
                    android:layout_marginLeft="@dimen/space_v_30"
                    android:layout_marginRight="@dimen/space_v_30"
                    android:layout_marginTop="@dimen/space_v_40"
                    android:background="@drawable/login_edit_bg"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_v_34"
                        android:layout_height="@dimen/space_v_34"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/space_v_20"
                        android:src="@mipmap/username_icon" />

                    <EditText
                        android:id="@+id/edit_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:hint="请输入手机号码"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="@dimen/space_v_12"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/textsize_28" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_v_120"
                    android:layout_below="@id/ll_username"
                    android:layout_marginLeft="@dimen/space_v_30"
                    android:layout_marginRight="@dimen/space_v_30"
                    android:layout_marginTop="@dimen/space_v_20"
                    android:background="@drawable/login_edit_bg"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_v_34"
                        android:layout_height="@dimen/space_v_34"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/space_v_20"
                        android:src="@mipmap/password_icon" />

                    <EditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLength="18"
                        android:paddingLeft="@dimen/space_v_12"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/textsize_28" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_v_120"
                    android:layout_below="@id/ll_password"
                    android:layout_marginLeft="@dimen/space_v_30"
                    android:layout_marginRight="@dimen/space_v_30"
                    android:layout_marginTop="@dimen/space_v_30"
                    android:background="@drawable/login_no_password_bg"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_32" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_v_20"
                    android:layout_marginTop="@dimen/space_v_30">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="其他方式登录"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/textsize_24" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_v_1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_v_30"
                        android:layout_marginRight="@dimen/space_v_20"
                        android:layout_toLeftOf="@id/textView1"
                        android:background="@color/part_divider" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_v_1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_v_20"
                        android:layout_marginRight="@dimen/space_v_30"
                        android:layout_toRightOf="@id/textView1"
                        android:background="@color/part_divider" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_third_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_v_150"
                    android:layout_marginTop="@dimen/space_v_20">

                    <ImageView
                        android:id="@+id/image_qq"
                        android:layout_width="@dimen/space_v_60"
                        android:layout_height="@dimen/space_v_60"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/login_qq" />

                    <ImageView
                        android:id="@+id/image_weixin"
                        android:layout_width="@dimen/space_v_60"
                        android:layout_height="@dimen/space_v_60"
                        android:layout_marginRight="@dimen/space_v_90"
                        android:layout_toLeftOf="@id/image_qq"
                        android:src="@mipmap/login_weixin" />

                    <ImageView
                        android:id="@+id/image_weibo"
                        android:layout_width="@dimen/space_v_60"
                        android:layout_height="@dimen/space_v_60"
                        android:layout_marginLeft="@dimen/space_v_90"
                        android:layout_toRightOf="@id/image_qq"
                        android:src="@mipmap/login_weibo" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_120"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_v_8"
                android:background="@color/part_big_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_forget_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="忘记密码？"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/textsize_28" />

                <TextView
                    android:id="@+id/text_register"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="注册"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/textsize_28" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>