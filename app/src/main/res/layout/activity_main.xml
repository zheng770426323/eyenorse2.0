<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eyenorse.main.MainActivity"
    android:background="@color/white">

    <include layout="@layout/head_top"/>
    <com.eyenorse.view.MyViewPager
        android:id="@+id/viewPager_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_v_50"
        android:layout_marginBottom="@dimen/space_v_90"
        android:orientation="vertical">
    </com.eyenorse.view.MyViewPager>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_90"
        android:paddingBottom="@dimen/space_v_10"
        android:paddingTop="@dimen/space_v_10"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_tab1"
                android:layout_width="@dimen/space_v_50"
                android:layout_height="@dimen/space_v_28"
                android:src="@mipmap/tab1_select"/>
            <TextView
                android:id="@+id/textView_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_marginTop="@dimen/space_v_8"
                android:textColor="@color/top_bg_color"
                android:textSize="@dimen/textsize_20"/>
        </LinearLayout>
       <!-- <LinearLayout
            android:id="@+id/ll_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_tab2"
                android:layout_width="@dimen/space_v_34"
                android:layout_height="@dimen/space_v_34"
                android:src="@mipmap/tab2_gray"/>
            <TextView
                android:id="@+id/textView_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐"
                android:layout_marginTop="@dimen/space_v_8"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/textsize_20"/>
        </LinearLayout>-->
        <LinearLayout
            android:id="@+id/ll_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_tab2"
                android:layout_width="@dimen/space_v_34"
                android:layout_height="@dimen/space_v_34"
                android:src="@mipmap/tab3_gray"/>
            <TextView
                android:id="@+id/textView_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:layout_marginTop="@dimen/space_v_8"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/textsize_20"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_v_1"
        android:layout_above="@id/ll"
        android:background="@color/part_divider"></LinearLayout>
</RelativeLayout>
