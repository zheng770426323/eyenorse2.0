<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_top" />
    <include layout="@layout/top_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_v_30"
            android:layout_marginRight="@dimen/space_v_30"
            android:layout_marginTop="@dimen/space_v_30"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号码："
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/textsize_30" />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/textsize_30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_v_30"
            android:layout_marginLeft="@dimen/space_v_30"
            android:layout_marginRight="@dimen/space_v_30"
            android:layout_marginTop="@dimen/space_v_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额：¥"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/textsize_30" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/textsize_30" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginTop="@dimen/space_v_30"
        android:text="选择付款方式"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/textsize_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_v_30"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_radio2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_100">

            <ImageView
                android:id="@+id/image_radio2"
                android:layout_width="@dimen/space_v_40"
                android:layout_height="@dimen/space_v_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_v_20"
                android:src="@mipmap/mine_radioed" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/space_v_60"
                android:layout_height="@dimen/space_v_50"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_v_20"
                android:src="@mipmap/order_weixin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_v_20"
                android:layout_toRightOf="@id/iv2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_v_6"
                    android:text="使用微信进行支付"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/textsize_20" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_1"
            android:layout_marginLeft="@dimen/space_v_100"
            android:background="@color/part_divider"></LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_radio1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_100">

            <ImageView
                android:id="@+id/image_radio1"
                android:layout_width="@dimen/space_v_40"
                android:layout_height="@dimen/space_v_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_v_20"
                android:src="@mipmap/mine_radio" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/space_v_60"
                android:layout_height="@dimen/space_v_60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_v_20"
                android:src="@mipmap/order_zhifubao" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_v_20"
                android:layout_toRightOf="@id/iv"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_v_6"
                    android:text="使用支付宝进行支付"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/textsize_20" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_120"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/space_v_30"
            android:layout_marginRight="@dimen/space_v_30"
            android:background="@drawable/payoff_confirm_bg"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_36" />
    </RelativeLayout>
</LinearLayout>