<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/space_v_500"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/space_v_120"
            android:layout_height="@dimen/space_v_120"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_v_120"
            android:src="@mipmap/zxing_dianji" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_v_80"
            android:text="扫码成功!"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_30" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_90"
            android:layout_marginTop="@dimen/space_v_140"
            android:layout_marginBottom="@dimen/space_v_50"
            android:layout_marginLeft="@dimen/space_v_40"
            android:layout_marginRight="@dimen/space_v_40"
            android:text="确定"
            android:textSize="@dimen/textsize_32"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>