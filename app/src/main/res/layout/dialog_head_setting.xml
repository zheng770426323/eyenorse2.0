<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_v_30"
        android:layout_marginRight="@dimen/space_v_30"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/dialog_head_setting_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择照片"
            android:textSize="@dimen/textsize_24"
            android:textColor="@color/text_color_1"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_v_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_1"
            android:layout_marginTop="@dimen/space_v_12"
            android:background="@color/part_divider"></LinearLayout>
        <TextView
            android:id="@+id/textView_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_v_30"
            android:text="从本地选择"
            android:textSize="@dimen/textsize_28"
            android:textColor="@color/text_color_1"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_v_1"
            android:background="@color/part_divider"></LinearLayout>
        <TextView
            android:id="@+id/textView_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_v_30"
            android:text="拍照"
            android:textSize="@dimen/textsize_28"
            android:textColor="@color/text_color_1"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_cancel"
        android:layout_width="@dimen/space_v_650"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_v_30"
        android:layout_marginBottom="@dimen/space_v_30"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/space_v_30"
        android:text="取消"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/textsize_28"
        android:background="@drawable/dialog_head_setting_bg"
        android:gravity="center"/>

</LinearLayout>